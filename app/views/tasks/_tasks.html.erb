<% if tasks.any? %>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>タスク内容</th>
        <th>実行状況</th>
        <th>タスクの操作</th>
      </tr>
    </thead>
    <tbody>
      <% tasks.each do |task| %>
        <tr>
          <td><%= task.content %></td>
          <td><%= task.status %></td>
          <td>
            <%= link_to "Edit", edit_task_path(task), method: :get, class: 'btn btn-primary btn-xs' %>
            <%= link_to "Delete", task, method: :delete, data: {confirm: "You sure?" }, class: 'btn btn-danger btn-xs' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <div>
    <%= paginate tasks %>
  </div>
<% end %>